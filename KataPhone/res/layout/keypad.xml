<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f7f4"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:id="@+id/keypadlinear2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/frameLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/enteredDigits"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawablePadding="10dp"
                android:ellipsize="start"
                android:inputType="none"
                android:lines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/clear_image_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/backspace_btn" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/addtocontacts_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/keypad_add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/add_to_contacts"
                android:textColor="#007aff"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keypadlinear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@string/keypad_weight"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/spacerleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/GridLayout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/numpad1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/btn_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/keypad_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="ABC"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="DEF"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numpad2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/btn_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="GHI"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="JKL"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_six"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="MNO"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numpd3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/btn_seven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="PQRS"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_eight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="TUV"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_nine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="9"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="WXYZ"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numpad4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/btn_asterisk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="*"
                        android:textSize="@dimen/keypad_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="@dimen/keypad_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="-28dp"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="@dimen/keypad_text_letters_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginTop="@dimen/keypadtxt_margintop"
                        android:gravity="center"
                        android:text="#"
                        android:textSize="@dimen/keypad_text_size" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/call_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/call_btn_height"
                android:layout_marginTop="@dimen/keypad_margin_top"
                android:background="@drawable/round_rect_btn_selector"
                android:text="@string/call_string"
                android:textColor="@color/White"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spacerright"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>