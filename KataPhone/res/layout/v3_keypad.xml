<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f6f7f4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:id="@+id/frameLayout">

        <EditText
            android:id="@+id/enteredDigits"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:clickable="false"
            android:editable="true"
            android:singleLine="true"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="start"
            android:drawablePadding="10dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="12dp"
            android:background="@drawable/backspace" />

        <Button
            android:id="@+id/clearEnteredDigits"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right|center_vertical"
            android:background="@android:color/transparent" />

    </FrameLayout>

    <Button
        android:id="@+id/keypad_add_contact"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="-20dp"
        android:text="+ Add to Contacts"
        android:textColor="#007aff"
        android:visibility="invisible"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <GridLayout 
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        >

        <Button
            android:id="@+id/btn_one"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:text="1"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />


        <Button
            android:id="@+id/btn_two"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginLeft="@dimen/keypad_margin_right"
            android:text="2"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="@dimen/keypad_text_letters_size"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/keypad_text_letters_margin_top" />

        <Button
            android:id="@+id/btn_three"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginLeft="@dimen/keypad_margin_right"
            android:text="3"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="def"
            android:textSize="@dimen/keypad_text_letters_size"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/keypad_text_letters_margin_top" />

        <Button
            android:id="@+id/btn_four"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="4"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ghi"
            android:textSize="@dimen/keypad_text_letters_size"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="28dp" />

        <Button
            android:id="@+id/btn_five"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginLeft="@dimen/keypad_margin_right"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="5"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jkl"
            android:textSize="@dimen/keypad_text_letters_size"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btn_six"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginLeft="@dimen/keypad_margin_right"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="6"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mno"
            android:textSize="@dimen/keypad_text_letters_size"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/btn_seven"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="7"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pqrs"
            android:textSize="@dimen/keypad_text_letters_size"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/btn_eight"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginLeft="@dimen/keypad_margin_right"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="8"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tuv"
            android:textSize="@dimen/keypad_text_letters_size"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/btn_nine"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginLeft="@dimen/keypad_margin_right"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="9"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wxyz"
            android:textSize="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/btn_asterisk"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="*"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />


        <Button
            android:id="@+id/btn_zero"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginLeft="@dimen/keypad_margin_right"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="0"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <TextView
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btn_hash"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_height="@dimen/v3_keypad_btn_size"
            android:layout_width="@dimen/v3_keypad_btn_size"
            android:background="@drawable/round_button"
            android:layout_marginLeft="@dimen/keypad_margin_right"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="#"
            android:textSize="@dimen/keypad_text_size"
            android:paddingBottom="@dimen/keypad_text_padding_bottom" />

        <Button
            android:id="@+id/call_btn"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnSpan="3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/round_rect_button"
            android:layout_marginTop="@dimen/keypad_margin_top"
            android:text="Call"
            android:textSize="25dp"
            android:textColor="#FFFF" />

    </GridLayout>

</RelativeLayout>